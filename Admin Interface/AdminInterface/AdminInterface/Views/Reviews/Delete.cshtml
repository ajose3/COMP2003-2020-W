@model AdminInterface.Models.Reviews

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

@using (Html.BeginForm("DeleteConfirmed", "Reviews", new { Id = Model.ProductId, customerid = Model.CustomerId }, FormMethod.Post))
{

    @Html.HiddenFor(model => model.ProductId)
    @Html.HiddenFor(model => model.CustomerId)


    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Reviews</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Rating)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Rating)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.EmailAddress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.Category)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="submit" asp-for="ProductId" />
            <input type="submit" asp-for="CustomerId" />
            <input type="submit" value="DeleteConfirmed" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
}
