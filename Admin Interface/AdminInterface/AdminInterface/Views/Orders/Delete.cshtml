@model AdminInterface.Models.Orders

@{
    ViewData["Title"] = "Orders";
}

<h1>Delete</h1>

@using (Html.BeginForm("DeleteConfirmed", "Orders", new { Id = Model.OrderId }, FormMethod.Post))
{

    @Html.HiddenFor(model => model.OrderId)

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Orders</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TimeOrdered)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TimeOrdered)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Quantity)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.EmailAddress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Product)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Product.Category)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="OrderId" />
            <input type="submit" value="DeleteConfirmed" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
}


