<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileApp.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <!--Padding="0 0 20 0"-->
            <Label FontSize="40" HorizontalOptions="Center" Text="Login"/>
            <Label Text="Email" FontSize="Large"/>
            <Entry x:Name="usernameEntry" Text="{Binding Username}" Placeholder="Email" FontSize="Large"/>
            <Label Text="Password" FontSize="Large"/>
            <Entry x:Name="passwordEntry" Text="{Binding Password}" Placeholder="Password" FontSize="Large" IsPassword="True"/>
            
            <Button Text="Login" Command="{Binding SubmitCommand}"/>
            <!--<Label x:Name="messageLabel"/>-->
            <FlexLayout Wrap="Wrap" JustifyContent="SpaceAround">
                <Button WidthRequest="185" Text="Register" Clicked="GoToRegisterPage"/>
                <Button WidthRequest="185" Text="Reset Password" Clicked="GoToResetPage"/>
            </FlexLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>